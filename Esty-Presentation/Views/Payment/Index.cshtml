@model ReturnResultHasObjsDTO<ReturnAllPaymentDTO>
@using Etsy_DTO
@using Etsy_DTO.Payment

<h1 class="mt-4">@ViewBag.All Payments</h1>

@if (TempData["Message"] != null)
{
<div class="alert alert-success">@TempData["Message"]</div>
    TempData["Message"] = null;
}

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">@ViewBag.ID</th>
                <th scope="col">@ViewBag.Price</th>
                <th scope="col">@ViewBag.Response</th>
                <th scope="col">@ViewBag.Actionsss</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ReturnAllPaymentDTO payment in Model.Entities)
            {
                <tr>
                    <td>@payment.PaymentID</td>
                    <td>@payment.TotalPrice</td>
                    <td>@payment.Response</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Actions">
                            <a asp-action="Edit" asp-route-id="@payment.PaymentID" class="btn btn-primary btn-sm mr-1">@ViewBag.Edittt</a>
                            <form asp-action="Delete" asp-route-id="@payment.PaymentID" method="post" onsubmit="return confirm('Are you sure you want to delete this payment?');">
                                <button type="submit" class="btn btn-danger btn-sm">@ViewBag.Delette</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
