@model ReturnResultHasObjsDTO<ReturnAllProductsDTO>
@using Etsy_DTO
@using Etsy_DTO.Products

@{
    int totalItemCount = ViewBag.TotalItemCount;
    int itemsPerPage = 5;
}
<h1>Products</h1>
<div class="d-flex justify-content-end mt-3">
    <a class="btn btn-success" asp-action="Create">Create New</a>
</div>
<div class="row">
    <div class="col-md-8">
        <div class="mt-3">
            <form asp-action="Search" method="get" class="form-inline">
                <div class="form-group mr-2 w-75">
                    <input type="text" class="form-control w-100" name="searchTerm" placeholder="Search..." value="@ViewBag.SearchTerm">
                </div>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-search fa-sm"></i>
                </button>
            </form>
        </div>
    </div>
    <div class="col-md-4">
        <div class="mt-3">
            <form asp-action="Index" method="get" class="form-inline ">
                <div class="form-group mr-5 w-50">
                    <select class="form-control" name="filtrationMethod" value="@ViewBag.filtrationMethod">
                        <option value="0">Select Filtration</option>
                        <option value="1">Lowest Price</option>
                        <option value="2">Highest Price</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Apply</button>
            </form>
        </div>
    </div>
</div>




@if (totalItemCount != 0)
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="">
                <tr>
                    <th>Name</th>
                    <th>Image</th>

                    <th>Price</th>
                    <th>Stock</th>

                    <th>Actions</th> 
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Entities)
                {
                    <tr>
                        <td>@product.ProductNameEN</td>
                        <th><img src="@product.ProductImage" class="w-25" /> </th>

                        <td>@product.ProductPrice</td>
                        <td>@product.ProductStock</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Actions">

                                <a class="btn btn-primary btn-sm  mr-1" asp-action="Edit" asp-route-id="@product.ProductId">Edit</a>
                                <a class="btn btn-info btn-sm  mr-1" asp-action="Details" asp-route-id="@product.ProductId">Details</a>
                                <form asp-action="Delete" asp-route-id="@product.ProductId" method="post" onsubmit="return confirm('Are you sure you want to delete this payment?');">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    

    


    <div class="pagination justify-content-center">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Index", new { pageNumber = 1, itemsPerPage })">First</a>
            </li>
            @for (int i = 1; i <= (int)Math.Ceiling((double)totalItemCount / itemsPerPage); i++)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = i, itemsPerPage })">@i</a>
                </li>
            }
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Index", new { pageNumber = (int)Math.Ceiling((double)totalItemCount / itemsPerPage), itemsPerPage })">Last</a>
            </li>
        </ul>
    </div>
}
else
{
    <p>No products found.</p>
}
