@model Etsy_DTO.BaseCategory.ReturnAddUpdateBaseCategoryDTO
@using Etsy_DTO.BaseCategory;

<h1>Edit Category</h1>
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div>
        <label asp-for="NameEN"></label>
        <input asp-for="NameEN" class="form-control" />
        <span asp-validation-for="NameEN" style="color:red"></span>
    </div>
    <div>
        <label asp-for="NameAR"></label>
        <input asp-for="NameAR" class="form-control" />
        <span asp-validation-for="NameAR" style="color:red"></span>
    </div>


    <div>
        <label asp-for="BaseCategoryImage"></label>
        <input asp-for="BaseCategoryImage" class="form-control" />
        <span asp-validation-for="BaseCategoryImage" style="color:red"></span>
    </div>

    <button class="btn btn-primary mt-3" type="submit">Update</button>
</form>
<a asp-action="Index" class="btn btn-info mt-3">Back to List</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
