@model Etsy_DTO.Category.ReturnAddUpdateCategoryDTO

<h1>Details</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Id: @Model.Id</h4>
                <h4 class="card-title">Name (EN): @Model.NameEN</h4>
                <h4 class="card-title">Name (AR): @Model.NameAR</h4>
                <h4 class="card-title">Base Category Id: @Model.BaseCategoryId</h4>
                <h4 class="card-title">Category Image: @Model.CategoryImage</h4>
            </div>
        </div>
    </div>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> |
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
