

@model Etsy_DTO.Category.ReturnAddUpdateCategoryDTO

<div class="container">
    <h1 class="my-4">Category Details</h1>

    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <img src="@Model.CategoryImage" class="img-fluid rounded" alt="CategoryImage">
                </div>
                <div class="col-md-8">
                    <h5 class="card-title">
                        Category ID: <span class="card-text">@Model.Id</span>
                    </h5>
                    

                    <h5 class="card-title">
                        Product Name (EN):                    <span class="card-text">@Model.NameEN</span>
                    </h5>

                    <h5 class="card-title">
                        Product Name (AR):                    <span class="card-text">@Model.NameAR</span>
                    </h5>

                    <h5 class="card-title">
                        BaseCategory Id:                    <span class="card-text">@Model.BaseCategoryId</span>
                    </h5>
                </div>
            </div>
        </div>
    </div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> |

    <a class="btn btn-primary mt-3" asp-action="Index">Back to List</a>
</div>

