@model ReturnResultHasObjsDTO<ReturnAllOrdersDTO>
@using Etsy_DTO
@using Etsy_DTO.Orders

<h1> Orders</h1>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Address</th>
                <th>TotalPrice</th>

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ReturnAllOrdersDTO order in Model.Entities)
            {
                <tr>
                    <td>@order.Address</td>
                    <td>@order.TotalPrice</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Actions">
                            <a asp-action="Details" asp-route-id="@order.OrdersId" class="btn btn-info btn-sm mr-1">Details</a>
                            <a asp-action="Edit" asp-route-id="@order.OrdersId" class="btn btn-primary btn-sm mr-1">Edit</a>
                            <form asp-action="Delete" asp-route-id="@order.OrdersId" method="post" onsubmit="return confirm('Are you sure you want to delete this payment?');" style="margin-right: 5px;">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

