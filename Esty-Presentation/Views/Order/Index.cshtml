@model ReturnResultHasObjsDTO<ReturnAllOrdersDTO>
@using Etsy_DTO
@using Etsy_DTO.Orders
@if (TempData["Message"] != null)
{
<div class="alert alert-success">@TempData["Message"]</div>
    TempData["Message"] = null;
}
<h1> @ViewBag.Orders</h1>


<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>

                <th>@ViewBag.Address</th>
                <th>@ViewBag.TotalPrice</th>
    
                <th>@ViewBag.Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ReturnAllOrdersDTO order in Model.Entities)
            {
                <tr>
                    <td>@order.Address</td>
                    <td>@order.TotalPrice</td>
                    <td>@order.Status</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Actions">
                            <a asp-action="Details" asp-route-id="@order.OrdersId" class="btn btn-info btn-sm mr-1">@ViewBag.Details</a>
                            <a asp-action="Edit" asp-route-id="@order.OrdersId" class="btn btn-primary btn-sm mr-1">@ViewBag.Editt</a>
                            <form asp-action="Delete" asp-route-id="@order.OrdersId" method="post" onsubmit="return confirm('Are you sure you want to delete this payment?');" style="margin-right: 5px;">
                                <button type="submit" class="btn btn-danger btn-sm">@ViewBag.Deletee</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

